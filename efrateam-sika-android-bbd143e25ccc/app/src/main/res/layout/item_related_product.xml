<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp">

    <android.support.v7.widget.CardView style="@style/CustomCardView.Gray">

        <LinearLayout
            style="@style/CustomLayoutCardView.Gray"
            android:background="@drawable/selector_item_cardview_white">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_related_product"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_jeringa" />

                <ProgressBar
                    android:id="@+id/progress_loader"
                    style="@style/CustomProgressBar" />
            </RelativeLayout>

            <com.muuyal.sika.customs.CustomTextView
                android:id="@+id/tv_related_product"
                style="@style/CustomTextView"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="name"
                android:textSize="@dimen/text_small" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>