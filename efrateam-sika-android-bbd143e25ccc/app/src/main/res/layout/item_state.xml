<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_state"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@drawable/selector_item_menu_gray"
    android:orientation="vertical">

    <com.muuyal.sika.customs.CustomTextView
        android:id="@+id/tv_state_name"
        style="@style/CustomTextView"
        android:padding="15dp"
        android:text="stateName"
        android:textColor="@color/gray_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/gray_header" />
</LinearLayout>