<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_item_drawer"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:id="@+id/container_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_promotion_logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY" />

            <ProgressBar
                android:id="@+id/progress_loader"
                style="@style/CustomProgressBar" />
        </RelativeLayout>

        <com.muuyal.sika.customs.CustomTextView
            android:id="@+id/tv_promotion_desc"
            style="@style/CustomTextView"
            android:layout_below="@+id/container_image"
            android:text="@string/message_promotion"
            android:textSize="@dimen/text_medium" />

        <LinearLayout
            android:id="@+id/container_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:background="@drawable/selector_item_drawer"
            android:orientation="vertical" />
    </RelativeLayout>
</RelativeLayout>